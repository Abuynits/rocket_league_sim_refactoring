<launch>
    <group ns="cam0">
      <node pkg="rktl_launch" type="gen_cam_tf" name="pose2tf">
        <param name="cam_frame" value="cam0"/>
      </node>
      <node pkg="rktl_launch" type="projector" name="projector">
        <param name="ground_height" value="0.00"/>
      </node>
    </group>

    <group ns="cam1">
      <node pkg="rktl_launch" type="gen_cam_tf" name="pose2tf">
        <param name="cam_frame" value="cam1"/>
      </node>
      <node pkg="rktl_launch" type="projector" name="projector">
        <param name="ground_height" value="-0.02"/>
      </node>
    </group>

    <group ns="cam2">
      <node pkg="rktl_launch" type="gen_cam_tf" name="pose2tf">
        <param name="cam_frame" value="cam2"/>
      </node>
      <node pkg="rktl_launch" type="projector" name="projector">
        <param name="ground_height" value="-0.01"/>
      </node>
    </group>

    <group ns="cam3">
      <node pkg="rktl_launch" type="gen_cam_tf" name="pose2tf">
        <param name="cam_frame" value="cam3"/>
      </node>
      <node pkg="rktl_launch" type="projector" name="projector">
        <param name="ground_height" value="-0.03"/>
      </node>
    </group>  

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find rktl_launch)/rviz/field.rviz"/>
</launch>