<launch>
    <arg name="render" default="true"/>
    <arg name="pybullet_render" default="false"/>

    <rosparam command="load" file="$(find rktl_launch)/config/global_params.yaml"/>

    <include if="$(arg render)" file="$(find rktl_sim)/launch/visualizer.launch" pass_all_args="true"/>
    <include file="$(find rktl_sim)/launch/simulator.launch" pass_all_args="true"/>
    <include file="$(find rktl_planner)/launch/local_planner.launch" pass_all_args="true"/>
    <include file="$(find rktl_control)/launch/velocity_controller.launch" pass_all_args="true"/>
</launch>
