<launch>

    <arg name="device" default="/dev/input/js0"/>

    <!-- Xbox controller -->
    <node name="joy_node" pkg="joy" type="joy_node" output="screen" respawn="false">
        <param name="dev" value="/dev/input/js0"/>
    </node>

    <node name="xbox_interface" pkg="rocket_league_simulation" type="xbox_interface" output="screen" respawn="false">
        <param name="device" value="/dev/input/js0"/>
    </node> 
</launch>