    <include ns="cam0" file="$(find camera_tracking)/launch/camera_boilerplate.launch">
        <arg name="camera_name" value="cam0"/>
    </include>

    <include ns="cam1" file="$(find camera_tracking)/launch/camera_boilerplate.launch">
        <arg name="camera_name" value="cam1"/>
    </include>

    <include ns="cam2" file="$(find camera_tracking)/launch/camera_boilerplate.launch">
        <arg name="camera_name" value="cam2"/>
    </include>

    <include ns="cam3" file="$(find camera_tracking)/launch/camera_boilerplate.launch">
        <arg name="camera_name" value="cam3"/>
