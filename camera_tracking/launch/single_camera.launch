<launch>
  <arg name="load_manager" default="true"/>
  <arg name="manager_name" default="camera_manager"/>
  <arg name="manager" value="/$(arg manager_name)"/>
  <arg name="manager_threads" default="4"/>
  <arg name="launch_dynamic_reconfigure" default="$(arg load_manager)"/>

  <arg name="camera_name" default="aravis_cam"/>

  <!-- Nodelet Manager -->
  <node if="$(arg load_manager)" pkg="nodelet" type="nodelet" name="$(arg manager_name)" args="manager" output="screen">
    <param name="num_worker_threads" value="$(arg manager_threads)" />
  </node>

  <!-- Load Parameters -->

  <!-- Aravis RGB camera nodelet -->
  <node pkg="nodelet" type="nodelet" name="$(arg camera_name)" args="load camera_aravis/CameraAravisNodelet $(arg manager)" output="screen">
    <rosparam command="load" file="$(find camera_tracking)/config/$(arg camera_name).yaml" />
    <param name="frame_id" value="$(arg camera_name)" />
    <param name="camera_info_url" value="package://camera_tracking/config/$(arg camera_name).yaml" />
  </node>

  <!-- De-Bayer / rectify -->
  <node pkg="image_proc" type="image_proc" ns="$(arg camera_name)" name="image_proc" respawn="false" output="screen"/>

  <!-- Apriltag detection -->
  <rosparam command="load" file="$(find apriltag_ros)/config/settings.yaml" ns="$(arg camera_name)/apriltag" />
  <rosparam command="load" file="$(find apriltag_ros)/config/tags.yaml" ns="$(arg camera_name)/apriltag" />

  <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" ns="$(arg camera_name)" name="apriltag" clear_params="true" output="screen">
    <param name="camera_frame" type="str" value="$(arg camera_name)" />
    <param name="publish_tag_detections_image" type="bool" value="true" />
  </node>

  <!-- Dynamic reconfigure -->
  <node if="$(arg launch_dynamic_reconfigure)" name="dynamic_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" output="screen" />
</launch> 
