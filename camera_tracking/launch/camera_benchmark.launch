<launch>
  <include file="$(find camera_tracking)/launch/basler_camera.launch">
    <arg name="camera_name" value="cam2"/>
  </include>

  <include file="$(find camera_tracking)/launch/pointgrey_camera.launch">
    <arg name="camera_name" value="cam1"/>
  </include>

  <!-- Run multiple cameras -->
  <node pkg="camera_tracking" type="tf_parser" name="tf_parser" output="screen">
    <rosparam param="camera_names">[cam1, cam2]</rosparam>
    <rosparam param="tag_names">[tag_0, tag_1, tag_69]</rosparam>
  </node>

  <node pkg="camera_tracking" type="pose_extractor" name="pose_extractor" output="screen">
    <param name="topic_name" value="/map_to_tag_1" />
    <param name="target_frame" value="tag_1" />
    <param name="source_frame" value="map" />
  </node>
</launch>
