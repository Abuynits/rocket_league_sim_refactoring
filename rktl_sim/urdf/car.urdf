<?xml version="1.0"?> 
<robot name="simplecar">
    <!-- Colors --> 
    <material name="black"> 
        <color rgba="0 0 0 1"/>
    </material>
    <material name="blue"> 
        <color rgba="0.6 0.7 0.8 1"/>
    </material>

    <!-- Base frame of car --> 
    <!-- Local frame is X up, Y left, and Z out -->
    <link name="base_link">
        <inertial> 
            <mass value="6"/>
            <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0.0" izz="0.2"/>
        </inertial> 
    </link>

    <link name="chassis">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value=".1"/>
            <inertia ixx="0.010609" ixy="0" ixz="0" iyy="0.050409" iyz="0" izz="0.05865"/>
        </inertial>
        <visual> 
            <geometry> 
                <box size="0.13 0.28 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.13 0.28 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="base_link_joint" type="prismatic">
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
        <parent link="base_link"/>
        <child link="chassis"/>
        <axis xyz="1 0 0"/>
        <limit effort="100" velocity="10"/>
    </joint>
    
</robot>
